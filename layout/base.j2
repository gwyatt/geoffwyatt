<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!-->
<html lang="en"><!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <title>{{ site_title }} | {% block title %}{{ resource.meta.title }}{% endblock %}</title>
        
        <!-- Mobile Specific Metas
        ================================================== -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        
        <!-- CSS -->
        <link rel="stylesheet" href="{{ media_url('css/skeleton.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ media_url('css/layout.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ media_url('css/base.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ media_url('css/style.css') }}" type="text/css"/>
        
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Typography -->
       <link href='http://fonts.googleapis.com/css?family=Cutive+Mono|Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
        
        <!-- Favicon -->
        <link rel="shortcut icon" href="{{ media_url('img/favicon.ico') }}">
        
        <!-- Metadata -->
        <meta name="description" content="{{ resource.meta.description }}">

        <!-- Font Awesome -->
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    </head>
    <body>
    <div class="container">
        <!-- Nav -->
        <div class="row">
            <div class="sixteen columns me">
                <div><img src="{{ media_url('img/gw.png') }}"></div>
            </div>
            <div class="sixteen columns">
                <ul class="nav">
                  {% for menu_item in menu -%}
                  <li><a href="{{ menu_item.url }}">{{ menu_item.title }}</a></li>
                  {%- endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="navbreak"></div>
    <div class="container padtop">

        <!-- Content --> 
            {% block content %}
            {% endblock content %}
        </div>
        </div>
        </div>
        <div class="footerbreak"></div>
        <div class="container footer">
        <div class="four columns offset-by-two">
            <a href="http://twitter.com/geoffwyatt" target="_blank">
                <div class="footeritem">
                    <i class="fa fa-twitter fa-4x"></i>
                    <p>Follow me on Twitter.</p>
                </div>
            </a>
        </div>
        <div class="four columns">
            <a href="http://instagram.com/geoffreywyatt" target="_blank">
                <div class="footeritem">
                    <i class="fa fa-instagram fa-4x"></i>
                    <p>Follow me on Instagram.</p>
                </div>
            </a>
        </div>
        <div class="four columns">
            <a href="http://www.linkedin.com/in/geoffwyatt" target="_blank">
                <div class="footeritem">
                    <i class="fa fa-linkedin-square fa-4x"></i>
                    <p>Contact me on LinkedIn.</p>
                </div>
            </a>
        </div>
        </div>

     </body>
</html>

